{{! app/templates/components/zz-tab.hbs }}
{{#if linkTo}}
	{{#link-to linkTo resource}}
		{{#if iconClass}}
	    <i {{bind-attr class=icon}}></i>
		{{/if}}
		{{#if label}}
		  {{label}}
		{{else}}
		  {{yield}}
		{{/if}}
	{{/link-to}}
{{else}}
	{{#if iconClass}}
	    <i {{bind-attr class=icon}}></i>
	{{/if}}
	{{#if label}}
	  {{label}}
	{{else}}
	  {{yield}}
	{{/if}}
{{/if}}
